<section class="py-15 relative mx-auto">
        <div class="w-full max-w-7xl px-4 md:px-5 lg-6 mx-auto">
            <h2 class="font-manrope font-bold text-4xl leading-10 text-black text-center">
                Order Details
            </h2>
            <p class="mt-4 font-normal text-lg leading-8 text-gray-500 mb-11 text-center">Thanks for making a purchase. You can check your order summary from below</p>
            <div class="main-box border border-gray-200 rounded-xl pt-6 max-w-xl max-lg:mx-auto lg:max-w-full">
                <div
                    class="flex flex-col lg:flex-row lg:items-center justify-between px-6 pb-6 border-b border-gray-200">
                    <div class="data">
                        <p class="font-semibold text-base leading-7 text-black">Order Id: <span class="text-indigo-600 font-medium">#EPRORDR-<%= @order.id %></span></p>
                        <p class="font-semibold text-base leading-7 text-black mt-4">Order Time : <span class="text-gray-400 font-medium"> <%= @order.created_at %> </span></p>
                    </div>
                </div>
                <% @order.line_items.each do |line_item| %>
                    <div class="w-full px-3 min-[400px]:px-6">
                        <div class="flex flex-col lg:flex-row items-center py-6 border-b border-gray-200 gap-10 w-full">
                            <div class="img-box max-lg:w-full">
                                <%= image_tag line_item.product.images[0], class:"aspect-square w-full lg:max-w-[140px] rounded-xl object-cover" %>
                            </div>
                            <div class="flex flex-row items-center w-full ">
                                <div class="grid grid-cols-1 lg:grid-cols-2 w-full">
                                    <div class="flex items-center">
                                        <div class="">
                                            <h2 class="font-semibold text-xl leading-8 text-black mb-3">
                                                <%= line_item.product.name %>
                                            </h2>
                                            <p class="font-normal text-lg leading-8 text-gray-500 mb-3 ">
                                                <%= line_item.product.description.truncate(40) %>
                                            </p>
                                            <div class="flex items-center ">
                                                <p class="font-medium text-base leading-7 text-black ">
                                                    Qty: <span class="text-gray-500"><%= line_item.quantity %></span>
                                                </p>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="grid grid-cols-5">
                                        <div class="col-span-5 lg:col-span-1 flex items-center max-lg:mt-3">
                                            <div class="flex gap-3 lg:block">
                                                <p class="font-medium text-sm leading-7 text-black">price</p>
                                                <p class="lg:mt-4 font-medium text-sm leading-7 text-indigo-600">$<%= line_item.quantity*line_item.product.price %></p>
                                            </div>
                                        </div>
                                        <div class="col-span-5 lg:col-span-2 flex items-center max-lg:mt-3 ">
                                            <div class="flex gap-3 lg:block">
                                                <p class="font-medium text-sm leading-7 text-black">
                                                    Status
                                                </p>
                                                <p class="font-medium text-sm leading-6 whitespace-nowrap py-0.5 px-3 rounded-full lg:mt-3 bg-emerald-50 text-emerald-600">
                                                    <%= @order.status %>
                                                </p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>

                <div class="w-full border-t border-gray-200 px-6 flex flex-col lg:flex-row items-center justify-end ">
                    <p class="font-semibold text-lg text-black py-6">Total Price: <span class="text-indigo-600"> $<%= @order.total %></span></p>
                </div>
            </div>
        </div>
    </section> 
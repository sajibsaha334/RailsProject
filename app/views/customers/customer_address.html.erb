<div class="mx-auto md:w-2/3 w-full rounded-lg border border-gray-100 bg-white shadow-md p-7">
    <%= form_with(url: customer_address_update_path) do |form| %>
        <div class="my-5">
            <%= form.label :address %>
            <%= form.text_area :address, value: current_user.address, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="">
            <%= form.submit class: "rounded-lg py-3 px-8 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
    <% end %>
</div>